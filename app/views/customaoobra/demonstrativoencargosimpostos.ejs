<!DOCTYPE HTML>
	<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Cadastro de Encargos e Impostos</title>
		
		<!-- JQuery -->
		<script src="js/jquery-3.1.1.min.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="css/bootstrap.min.css">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">
		<script type="text/javascript" src="JavaScript/AutoCompletar.js"></script>
		<script type="text/javascript">
	 function Acao(tp,empresa,idencargoimposto,idtipodeencargo,nomeencargo,taxapercentualmes,status,)
			{
				var vForm = document.getElementById("frm");
				//vForm.nomesistema.focus();  
				if (tp == "Ed"){
					vForm.empresa.value=empresa;
					vForm.idencargoimposto.value=idencargoimposto;
					vForm.idtipodeencargo.value=idtipodeencargo;
					vForm.nomeencargo.value=nomeencargo;
					vForm.taxapercentualmes.value=taxapercentualmes;
					vForm.status.value=status;
			    	vForm.btn_ok.innerHTML = "Alterar";
			    	vForm.action="/Cmoatualizarencargosimpostos";
			    	vForm.method="put";
			    	vForm.btn_ok.disabled = false;
			    	return;
				}
				if (tp == "Nv"){
						vForm.btn_ok.innerHTML = "Confirmar";
						vForm.empresa.value="";
						vForm.idencargoimposto.value="";
						vForm.idtipodeencargo.value="";
						vForm.nomeencargo.value="";
						vForm.taxapercentualmes.value="";
						vForm.status.value="";
						vForm.action="/Customaoobraincencargosimpostos";
						vForm.method="post";
						vForm.btn_ok.disabled = false;
						return;
				}
				if (tp == "Psq"){
							vForm.btn_ok.innerHTML = "Pesquisar";
							vForm.empresa.value="";
							vForm.idencargoimposto.value="";
							vForm.idtipodeencargo.value="";
							vForm.nomeencargo.value="";
							vForm.taxapercentualmes.value="";
							vForm.status.value="";
							vForm.action="/Customaoobrapesquisarencargosimpostos";
							vForm.method="get";
							vForm.btn_ok.disabled = false;
				}else{
					vForm.empresa.value=empresa;
					vForm.idencargoimposto.value=idencargoimposto;
					vForm.idtipodeencargo.value=idtipodeencargo;
					vForm.nomeencargo.value=nomeencargo;
					vForm.taxapercentualmes.value=taxapercentualmes;
					vForm.status.value=status;
			    	vForm.btn_ok.innerHTML = "Excluir";
					vForm.action="/Customaoobraexcencargosimpostos";
					vForm.method="delete";
					vForm.btn_ok.disabled = false;
				}	 
				 
			}
		</script></head>

	<body>

		<div class="container home">
			<% if(msg != undefined){ %>
				<div class="alert alert-success">
						<strong>Atenção!</strong>
						<ul>
							<li><%=msg%></li>
						</ul>
					</div>
				<% } %>
			<% if(validacao.length > 0){ %>
					<div class="alert alert-danger">
						<strong>Atenção!</strong>
						<ul>
							<% for(var i = 0; i < validacao.length; i++) {%>
								<li><%=validacao[i].msg%></li>
							<% } %>
						</ul>
					</div>
				<% } %>
            <div class="row">
                <div class="col-md-2"></div>
                
                <div class="col-md-12 painel-login">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="row">
								<div class="col-md-12">

									<img src="img/sistemas.png" class="img-responsive img-center" />
									<br />
									<P id="mensagem"></P>
									<form action="/atualizaDemonstrativoencargosimpostos" method="put" id="frm" name="frm">
									<div class="form-group">
										<select name="empresa" id="empresao">
												<option value=0 selected>Selecione a empresa</option>
													<% function sortByProperty(property){  
														   return function(a,b){  
														      if(a[property] > b[property])  
														         return 1;  
														      else if(a[property] < b[property])  
														         return -1;  
														  
														      return 0;  
														   }; 
														  Clientes.sort(sortByProperty("nomedaempresa")); 
														} for(var i = 0; i < Clientes.length; i++) {%>
													<option value="<%=Clientes[i].empresa%>"><%=Clientes[i].nomedaempresa%></option>
													<% } %>
											</select>
										</div>
									<div class="form-group">
										<input type="hidden" name="idencargoimposto" id="idencargoimpostoo" class="form-control" placeholder="idencargoimposto" value=""></div>
									<div class="form-group">
										<select name="idtipodeencargo" id="idtipodeencargo">
											<% TipodeEncargo.sort(sortByProperty("descricao")); 
												 for(var i = 0; i < TipodeEncargo.length; i++) {%>
												<option value="<%=TipodeEncargo[i].idtipodeencargo%>"><%=TipodeEncargo[i].descricao%></option>
												<% } %>
										</select>
									</div>
									<div class="form-group">
										<input type="text" name="nomeencargo" id="nomeencargoo" class="form-control" placeholder="Informe nomeencargo" value=""></div>
									<div class="form-group">
										<input type="text" name="taxapercentualmes" id="taxapercentualmeso" class="form-control" placeholder="Informe taxapercentualmes" value=""></div>
									<div class="form-group">
										<select name="status" id="status">
											<option>Selecione</option>
											<option value=0>Ativo</option>
											<option value=1>Inativo</option>
										</select>
									</div>
									<div class="form-group">										
										<button type="submit" id="btn_ok" class="btn btn-primary btn-login" disabled>Confirmar</button>
										</div>
									</form>
								
								</div>
									<div id="lista" name="lista">
				<accordion-group heading="listagem de Demonstrativoencargosimpostos" >

			<h4>Lista de Encargos e Impostoss</h4><button class="btn btn-primary btn-login" onclick="Acao('Nv','','','','','','')">Novo</button>&nbsp;
			<button class="btn btn-primary btn-login" onclick="Acao('Psq','','','','','','')" title="Informe a palavra ( todos ) quando desejar listar todos os registros cadastrados">Pesquisar</button>
			<table class="table table-striped table-condensed">
				<thead>
				<tr class="login-header">
				<th style="min-width: 60px;">Empresa</th><th style="min-width: 60px;">Tipo de Encargo</th><th style="min-width: 60px;">Nome do Encargo</th><th style="min-width: 60px;">% Encargo</th><th style="min-width: 60px;">Situação</th>
				</tr>
				</thead>
				<tbody>
					<% situacao = [];
					situacao[0]= 'Ativo';
					situacao[1]= 'Inativo';
						if(Demonstrativoencargosimpostos.length > 0) { %>
	    				<% for(var i = 0; i < Demonstrativoencargosimpostos.length; i++) {%>
							<tr>
								<td><%=Demonstrativoencargosimpostos[i].empresa%>-<%=Demonstrativoencargosimpostos[i].nomedaempresa%></td>
								<td><%=Demonstrativoencargosimpostos[i].idtipodeencargo%>-<%=Demonstrativoencargosimpostos[i].descricao%></td>
								<td><%=Demonstrativoencargosimpostos[i].nomeencargo%></td>
								<td><%=Demonstrativoencargosimpostos[i].taxapercentualmes%></td>
								<td><%=situacao[Demonstrativoencargosimpostos[i].status]%></td>					
								<td><%if (Demonstrativoencargosimpostos[i].status == 0) {%>
									<button class="btn btn-primary btn-login" onclick="Acao('Ed','<%=Demonstrativoencargosimpostos[i].empresa%>','<%=Demonstrativoencargosimpostos[i].idencargoimposto%>','<%=Demonstrativoencargosimpostos[i].idtipodeencargo%>','<%=Demonstrativoencargosimpostos[i].nomeencargo%>','<%=Demonstrativoencargosimpostos[i].taxapercentualmes%>','<%=Demonstrativoencargosimpostos[i].status%>')">editar</button>
									<%}else{%>
											<button class="btn btn-primary btn-login" onclick="Acao('Ed','<%=Demonstrativoencargosimpostos[i].empresa%>','<%=Demonstrativoencargosimpostos[i].idencargoimposto%>','<%=Demonstrativoencargosimpostos[i].idtipodeencargo%>','<%=Demonstrativoencargosimpostos[i].nomeencargo%>','<%=Demonstrativoencargosimpostos[i].taxapercentualmes%>','<%=Demonstrativoencargosimpostos[i].status%>')">Ativar</button>
									<% } %>
									<%if (Demonstrativoencargosimpostos[i].status == 0) {%>
									<button class="btn btn-primary btn-login" onclick="Acao('Ex','<%=Demonstrativoencargosimpostos[i].empresa%>','<%=Demonstrativoencargosimpostos[i].idencargoimposto%>','<%=Demonstrativoencargosimpostos[i].idtipodeencargo%>','<%=Demonstrativoencargosimpostos[i].nomeencargo%>','<%=Demonstrativoencargosimpostos[i].taxapercentualmes%>','<%=Demonstrativoencargosimpostos[i].status%>')">excluir</button>
									<% } %>
								</td>

							</tr>
						<% } %>
					<% } %>
				</tbody>
			</table>
	
	</accordion-group>
				</div>
											
							</div>
						</div>
					</div>
                </div>

                <div class="col-md-2"></div>
            </div>
        </div>
		
	</body>
</html>