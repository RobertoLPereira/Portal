<!DOCTYPE HTML>
	<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Cadastro de sistemas</title>
		
		<!-- JQuery -->
		<script src="js/jquery-3.1.1.min.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="css/bootstrap.min.css">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">
		<script type="text/javascript" src="JavaScript/AutoCompletar.js"></script>
		<script type="text/javascript">
	 function Acao(tp,descricao,idsetor,)
			{
				var vForm = document.getElementById("frm");
				//vForm.nomesistema.focus();  
				if (tp == "Ed"){
					vForm.descricao.value=descricao;
					vForm.idsetor.value=idsetor;
			    	vForm.btn_ok.innerHTML = "Alterar";
			    	vForm.action="/Cmoatualizarsetor";
			    	vForm.method="put";
			    	vForm.descricao.focus();
			    	vForm.btn_ok.disabled = false;
			    	return;
				}
				if (tp == "Nv"){
						vForm.btn_ok.innerHTML = "Confirmar";
						vForm.descricao.value="";
						vForm.idsetor.value=0;
						vForm.action="/Customaoobraincsetor";
						vForm.method="post";
						vForm.btn_ok.disabled = false;
						vForm.descricao.focus();
						return;
				}
				if (tp == "Psq"){
							vForm.btn_ok.innerHTML = "Pesquisar";
							vForm.descricao.value="";
							vForm.idsetor.value="";
							vForm.action="/pesquisarsetor";
							vForm.method="get";
							vForm.btn_ok.disabled = false;
							vForm.descricao.focus();
				}else{
					vForm.descricao.value=descricao;
					vForm.idsetor.value=idsetor;
			    	vForm.btn_ok.innerHTML = "Excluir";
					vForm.action="/Customaoobraexcsetor";
					vForm.method="delete";
					vForm.btn_ok.disabled = false;
					vForm.descricao.disabled=true;
				}	 
		 
			}
		</script></head>

	<body>

		<div class="container home">
			<% if(msg != undefined){ %>
				<div class="alert alert-success">
						<strong>Atenção!</strong>
						<ul>
							<li><%=msg%></li>
						</ul>
					</div>
				<% } %>
			<% if(validacao.length > 0){ %>
					<div class="alert alert-danger">
						<strong>Atenção!</strong>
						<ul>
							<% for(var i = 0; i < validacao.length; i++) {%>
								<li><%=validacao[i].msg%></li>
							<% } %>
						</ul>
					</div>
				<% } %>
            <div class="row">
                <div class="col-md-2"></div>
                
                <div class="col-md-12 painel-login">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="row">
								<div class="col-md-12">

									<img src="img/sistemas.png" class="img-responsive img-center" />
									<br />
									<P id="mensagem"></P>
									<form action="/atualizasetor" method="put" id="frm" name="frm"><div class="form-group">
					<input type="text" name="descricao" id="descricaoo" class="form-control" placeholder="Informe descricao" value=""></div>
					<div class="form-group">
						<input type="hidden" name="idsetor" id="idsetoro" class="form-control" placeholder="idsetor" value="">
					</div>
					<div class="form-group">										
						<button type="submit" id="btn_ok" class="btn btn-primary btn-login" disabled>Confirmar</button>
					</div>
					</form>
								
								</div>
									<div id="lista" name="lista">
				<accordion-group heading="listagem de setor" >

			<h4>Lista de Setores</h4><button class="btn btn-primary btn-login" onclick="Acao('Nv','','')">Novo</button>&nbsp;
			<button class="btn btn-primary btn-login" onclick="Acao('Psq','','')" title="Informe a palavra ( todos ) quando desejar listar todos os registros cadastrados">Pesquisar</button>
			<table class="table table-striped table-condensed">
				<thead>
				<tr class="login-header">
				<th style="min-width: 60px;">Sequencial</th><th style="min-width: 60px;">Denominação</th>
				</tr>
				</thead>
				<tbody>
					<% function sortByProperty(property){  
								   return function(a,b){  
								      if(a[property] > b[property])  
								         return 1;  
								      else if(a[property] < b[property])  
								         return -1;  
								  
								      return 0;  
								   };
						}%>
					<% if(Setor.length > 0) { 
						Setor.sort(sortByProperty("descricao"));%>
	    				<% for(var i = 0; i < Setor.length; i++) {%>
							<tr>
								<td><%=Setor[i].idsetor%></td>
								<td><%=Setor[i].descricao%></td>					
								<td>
									<button class="btn btn-primary btn-login" onclick="Acao('Ed','<%=Setor[i].descricao%>','<%=Setor[i].idsetor%>')">Editar</button>
									<button class="btn btn-primary btn-login" onclick="Acao('Ex','<%=Setor[i].descricao%>','<%=Setor[i].idsetor%>')">Excluir</button>					
								</td>
							</tr>
						<% } %>
					<% } %>
				</tbody>
			</table>
	
	</accordion-group>
				</div>
											
							</div>
						</div>
					</div>
                </div>

                <div class="col-md-2"></div>
            </div>
        </div>
		
	</body>
</html>