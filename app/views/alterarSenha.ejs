<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Alteracao de Senhas do Usuario</title>
		
		<!-- JQuery -->
		<script src="http://code.jquery.com/jquery-3.1.1.min.js"></script>

		<!-- bootstrap - link cdn -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	
		<!-- incluindo css -->
		<link href="css/style.css" rel="stylesheet">
		<script language="javascript" src="javascript/alterarSenha.js"></script>

	</head>

	<body>

		<div class="container home">
            <div class="row">
                <div class="col-md-2"></div>
                <% if(validacao.length > 0){ %>
					<div class="alert alert-danger">
						<strong>Atenção!</strong>
						<ul>
							<% for(var i = 0; i < validacao.length; i++) {%>
								<li><%=validacao[i].msg%></li>
							<% } %>
						</ul>
					</div>
				<% } %>
                <div class="col-md-8 painel-login">
					<div class="panel panel-default">
						<div class="panel-body">
							<div class="row">
								<div class="col-md-12">

									<img src="img/cliente.png" class="img-responsive img-center" />
									<br />
									<P id="mensagem"></P>
									<form action="/alterarsenha" method="post">
										<div class="form-group">
											<input type="text" name="usuario" id="usuario" class="form-control" placeholder="Nome de usuário" value="<%=usuario%>">
										</div>

										<div class="form-group">
											<input type="password" name="senha" id="senha" class="form-control" placeholder="Senha">
										</div>
										<div class="form-group">
											<input type="password" name="senhaN" id="senhaN" class="form-control" placeholder="Senha Nova">
										</div>
										<div class="form-group">
											<input type="password" name="senhaC" id="senhaC" class="form-control" placeholder="Senha de Confirmação">
										</div>
										<div class="form-group">
										<button type="submit" class="btn btn-primary btn-login" onclick="acessar();">Confirmar</button>
										</div>

										<div class="form-group">
											<div class="row">
												<div class="col-sm-6 col-sm-offset-3">
													<input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="OU">
												</div>
											</div>
										</div>
										<div class="form-group">
											<div class="row">
												<div class="col-lg-12">
													<div class="text-center">
														<a href="/login">Entrar com o Facebook</a>
													</div>
												</div>
											</div>
										</div>
									</form>
								
								</div>
							</div>
						</div>
					</div>
                </div>

                <div class="col-md-2"></div>
            </div>
        </div>
		
	</body>
</html>